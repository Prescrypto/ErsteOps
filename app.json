{
  "name": "Simple MVP ErstOps",
  "description": "Emergency App Manager",
  "scripts": {
    "postdeploy": "bin/postdeploy.sh"
  },
  "env": {
    "SECRET_KEY": {
      "required": true
    },
    "DEBUG_STATE": {
      "required": true
    },
    "PRODUCTION": {
      "required": true
    },
    "DJANGO_SETTINGS_MODULE": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "papertrail",
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
