{
  "name": "Simple MVP ErstOps",
  "description": "Emergency App Manager",
  "scripts": {
    "postdeploy": "bin/postdeploy.sh"
  },
  "env": {
    "SECRET_KEY": {
      "required": true
    },
    "DEBUG_STATE": {
      "required": true
    },
    "PRODUCTION": {
      "required": true
    },
    "DJANGO_SETTINGS_MODULE": {
      "required": true
    },
    "DATABASE_LOCAL":{
      "required": true
    },
    "DATABASE_REMOTE_URL":{
      "required": "true"
    },
    "BASE_URL": {
      "required": "true"
    },
    "ODOO_URL": {
      "required": "true"
    },
    "ODOO_USERNAME": {
      "required": "true"
    },
    "ODOO_PASSWORD": {
      "required": "true"
    }

  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "papertrail",
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
